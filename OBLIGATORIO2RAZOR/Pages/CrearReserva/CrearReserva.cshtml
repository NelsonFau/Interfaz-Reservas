@page
@model OBLIGATORIO2RAZOR.Pages.CrearReserva.CrearReservaModel
@{  
    ViewData["Title"] = "Crear Reserva";
}

<h2>Crear Reserva</h2>



<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">
            @Model.ErrorMessage
        </div>
    }
    <div class="form-group">
        <label for="numeroHabitacion">Número de Habitación</label>
        <select class="form-control" asp-for="NuevaReserva.numeroHabitacion" id="numeroHabitacion" name="numeroHabitacion">
            <option value="">Seleccione una habitación</option>
            @foreach (var habitacion in Model.Habitaciones)
            {
                <option value="@habitacion.Numero">@habitacion.TipoHabitacion</option>
            }
            
        </select>
    </div>

    <div class="form-group">
        <label for="FechaI">Fecha de Inicio</label>
        <input type="date" class="form-control" id="FechaI"  asp-for="NuevaReserva.FechaI" name="FechaI" required />
        <span asp-validation-for="NuevaReserva.FechaI" class="text-danger"></span> 
    </div>

    <div class="form-group">
        <label for="FechaF">Fecha de Fin</label>
        <input type="date" class="form-control" id="FechaF" name="FechaF" asp-for="NuevaReserva.FechaF" required />
        <span asp-validation-for="NuevaReserva.FechaF" class="text-danger"></span> 
    </div>

    <div class="form-group">
        <label for="UsuarioId">Huesped</label>
        <select class="form-control" asp-for="NuevaReserva.HuespedId" id="HuespedId" name="HuespedId">
            <option value="">Seleccione un huésped</option>
            @foreach (var usuario in Model.Usuarios)
            {
                <option value="@usuario.ID">@usuario.Nombre</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Crear Reserva</button>


    
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</form>

