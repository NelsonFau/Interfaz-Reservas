@page
@model OBLIGATORIO2RAZOR.Pages.InicioSesionUser.InicioSesionModel


<h2>Iniciar Sesión</h2>

<form method="post">
    <div class="form-group">
        <label for="Username">Usuario:</label>
        <input type="text" id="Username" class="form-control" asp-for="Login.Username" />
    </div>

    <div class="form-group">
        <label for="Password">Contraseña:</label>
        <input type="password" id="Password" class="form-control" asp-for="Login.Password" />
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
    </div>

    @if (Model.ErrorMessage != null)
    {
        <div class="alert alert-danger">
            @Model.ErrorMessage
        </div>
    }
</form>